# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/doc_extraction

# LLM Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
DEFAULT_LLM_PROVIDER=anthropic
DEFAULT_LLM_MODEL=claude-3-sonnet-20240229

# OCR Configuration
OCR_ENGINE=tesseract
TESSERACT_CMD=/usr/bin/tesseract

# File Storage
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=50000000

# Application Settings
SECRET_KEY=your-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Confidence Thresholds
MIN_CONFIDENCE_THRESHOLD=0.7
REQUIRED_FIELDS_THRESHOLD=0.8

# CORS Settings
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Frontend Configuration
REACT_APP_API_URL=http://localhost:8000

# HIPAA Compliance Settings
HIPAA_COMPLIANCE_MODE=true
ENCRYPTION_KEY_ROTATION_DAYS=90
SESSION_TIMEOUT_MINUTES=15
AUDIT_LOG_RETENTION_DAYS=2555
PHI_RETENTION_DAYS=2555
FAILED_LOGIN_LOCKOUT_ATTEMPTS=3
PASSWORD_MIN_LENGTH=12
REQUIRE_MFA=false
DATA_ENCRYPTION_KEY=your-256-bit-encryption-key-here
BACKUP_ENCRYPTION_ENABLED=true
SECURITY_MONITORING_ENABLED=true
BREACH_NOTIFICATION_EMAIL=security@yourorganization.com