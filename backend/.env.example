# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/doc_extraction

# LLM Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
DEFAULT_LLM_PROVIDER=anthropic
DEFAULT_LLM_MODEL=claude-3-sonnet-20240229

# OCR Configuration
OCR_ENGINE=tesseract  # tesseract or easyocr
TESSERACT_CMD=/usr/bin/tesseract  # Path to tesseract executable

# File Storage
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=50000000  # 50MB in bytes

# Application Settings
SECRET_KEY=your-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Confidence Thresholds
MIN_CONFIDENCE_THRESHOLD=0.7
REQUIRED_FIELDS_THRESHOLD=0.8

# CORS Settings
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
# Redis Configuration (for Celery)
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json

# Batch Processing Settings
MAX_BATCH_SIZE=100
BATCH_PROCESSING_TIMEOUT=3600
DOCUMENT_SPLITTING_ENABLED=true
AUTO_QUALITY_CHECK=true

# Workflow Settings
AUTO_ASSIGNMENT_ENABLED=true
DEFAULT_REVIEW_PRIORITY=normal
URGENT_CONFIDENCE_THRESHOLD=0.3
HIGH_PRIORITY_CONFIDENCE_THRESHOLD=0.6

# Monitoring Settings
METRICS_COLLECTION_ENABLED=true
METRICS_RETENTION_DAYS=30
HEALTH_CHECK_INTERVAL=60
PROMETHEUS_METRICS_ENABLED=true

# Business Rules
BUSINESS_RULES_ENABLED=true
CUSTOM_VALIDATION_ENABLED=true
CROSS_FIELD_VALIDATION=true

# HIPAA Compliance Settings
HIPAA_ENCRYPTION_ENABLED=true
HIPAA_AUDIT_ENABLED=true
HIPAA_SESSION_TIMEOUT=1800
HIPAA_MAX_LOGIN_ATTEMPTS=3
HIPAA_PASSWORD_MIN_LENGTH=12
HIPAA_DATA_RETENTION_DAYS=2555
HIPAA_BREACH_NOTIFICATION_EMAIL=security@company.com
